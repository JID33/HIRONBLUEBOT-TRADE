<?xml version="1.0" encoding="UTF-8"?>
<xml xmlns="https://developers.google.com/blockly/xml">
  <variables>
    <variable id="var_capital">Capital_total</variable>
    <variable id="var_stake">Stake</variable>
    <variable id="var_fast_period">Fast Period</variable>
    <variable id="var_slow_period">Slow Period</variable>
    <variable id="var_fast_ma">Fast MA</variable>
    <variable id="var_slow_ma">Slow MA</variable>
    <variable id="var_takeprofit">Take Profit</variable>
    <variable id="var_stoploss">Stop Loss</variable>
    <variable id="var_pauseafterloss">PauseAprèsPerte</variable>
    <variable id="var_seuil_volatilite">Seuil_volatilité</variable>
  </variables>
  <block type="trade_definition" id="trade_definition" x="10" y="10">
    <statement name="TRADE_OPTIONS">
      <block type="trade_definition_market" id="market">
        <field name="MARKET_LIST">synthetic_index</field>
        <field name="SUBMARKET_LIST">random_index</field>
        <field name="SYMBOL_LIST">R_10</field>
        <next>
          <block type="trade_definition_tradetype" id="tradetype">
            <field name="TRADETYPECAT_LIST">callput</field>
            <field name="TRADETYPE_LIST">callput</field>
            <next>
              <block type="trade_definition_contracttype" id="contracttype">
                <field name="TYPE_LIST">both</field>
                <next>
                  <block type="trade_definition_candleinterval" id="candleinterval">
                    <field name="CANDLEINTERVAL_LIST">60</field>
                  </block>
                </next>
              </block>
            </next>
          </block>
        </next>
      </block>
    </statement>
    <statement name="INITIALIZATION">
      <block type="variables_set" id="init_capital">
        <field name="VAR" id="var_capital">Capital_total</field>
        <value name="VALUE">
          <block type="math_number">
            <field name="NUM">100</field>
          </block>
        </value>
        <next>
          <block type="variables_set" id="init_stake">
            <field name="VAR" id="var_stake">Stake</field>
            <value name="VALUE">
              <block type="math_arithmetic">
                <field name="OP">MULTIPLY</field>
                <value name="A">
                  <block type="variables_get">
                    <field name="VAR" id="var_capital">Capital_total</field>
                  </block>
                </value>
                <value name="B">
                  <block type="math_number">
                    <field name="NUM">0.02</field>
                  </block>
                </value>
              </block>
            </value>
            <next>
              <block type="variables_set" id="init_fast_period">
                <field name="VAR" id="var_fast_period">Fast Period</field>
                <value name="VALUE">
                  <block type="math_number">
                    <field name="NUM">10</field>
                  </block>
                </value>
                <next>
                  <block type="variables_set" id="init_slow_period">
                    <field name="VAR" id="var_slow_period">Slow Period</field>
                    <value name="VALUE">
                      <block type="math_number">
                        <field name="NUM">30</field>
                      </block>
                    </value>
                    <next>
                      <block type="variables_set" id="init_takeprofit">
                        <field name="VAR" id="var_takeprofit">Take Profit</field>
                        <value name="VALUE">
                          <block type="math_arithmetic">
                            <field name="OP">MULTIPLY</field>
                            <value name="A">
                              <block type="variables_get">
                                <field name="VAR" id="var_stake">Stake</field>
                              </block>
                            </value>
                            <value name="B">
                              <block type="math_number">
                                <field name="NUM">2</field>
                              </block>
                            </value>
                          </block>
                        </value>
                        <next>
                          <block type="variables_set" id="init_stoploss">
                            <field name="VAR" id="var_stoploss">Stop Loss</field>
                            <value name="VALUE">
                              <block type="math_arithmetic">
                                <field name="OP">MULTIPLY</field>
                                <value name="A">
                                  <block type="variables_get">
                                    <field name="VAR" id="var_stake">Stake</field>
                                  </block>
                                </value>
                                <value name="B">
                                  <block type="math_number">
                                    <field name="NUM">-1</field>
                                  </block>
                                </value>
                              </block>
                            </value>
                            <next>
                              <block type="variables_set" id="init_pause">
                                <field name="VAR" id="var_pauseafterloss">PauseAprèsPerte</field>
                                <value name="VALUE">
                                  <block type="math_number">
                                    <field name="NUM">0</field>
                                  </block>
                                </value>
                                <next>
                                  <block type="variables_set" id="init_seuilvol">
                                    <field name="VAR" id="var_seuil_volatilite">Seuil_volatilité</field>
                                    <value name="VALUE">
                                      <block type="math_number">
                                        <field name="NUM">0.5</field>
                                      </block>
                                    </value>
                                  </block>
                                </next>
                              </block>
                            </next>
                          </block>
                        </next>
                      </block>
                    </next>
                  </block>
                </next>
              </block>
            </next>
          </block>
        </next>
      </block>
    </statement>
    <statement name="PURCHASE_CONDITIONS">
      <block type="tick_analysis" id="tick_analysis">
        <statement name="TICKANALYSIS_STACK">
          <block type="variables_set" id="set_fast_ma">
            <field name="VAR" id="var_fast_ma">Fast MA</field>
            <value name="VALUE">
              <block type="sma_array" id="fast_sma_array">
                <value name="INPUT">
                  <block type="ohlc_values" id="ohlc_close">
                    <field name="OHLCFIELD_LIST">close</field>
                    <field name="CANDLEINTERVAL_LIST">60</field>
                  </block>
                </value>
                <value name="PERIOD">
                  <block type="variables_get" id="get_fast_period">
                    <field name="VAR" id="var_fast_period">Fast Period</field>
                  </block>
                </value>
              </block>
            </value>
            <next>
              <block type="variables_set" id="set_slow_ma">
                <field name="VAR" id="var_slow_ma">Slow MA</field>
                <value name="VALUE">
                  <block type="sma_array" id="slow_sma_array">
                    <value name="INPUT">
                      <block type="ohlc_values" id="ohlc_close2">
                        <field name="OHLCFIELD_LIST">close</field>
                        <field name="CANDLEINTERVAL_LIST">60</field>
                      </block>
                    </value>
                    <value name="PERIOD">
                      <block type="variables_get" id="get_slow_period">
                        <field name="VAR" id="var_slow_period">Slow Period</field>
                      </block>
                    </value>
                  </block>
                </value>
                <next>
                  <!-- PAUSE APRES PERTE -->
                  <block type="controls_if" id="if_pause">
                    <value name="IF0">
                      <block type="logic_compare">
                        <field name="OP">LTE</field>
                        <value name="A">
                          <block type="variables_get">
                            <field name="VAR" id="var_pauseafterloss">PauseAprèsPerte</field>
                          </block>
                        </value>
                        <value name="B">
                          <block type="math_number">
                            <field name="NUM">0</field>
                          </block>
                        </value>
                      </block>
                    </value>
                    <statement name="DO0">
                      <!-- FILTRE DE VOLATILITE -->
                      <block type="controls_if" id="if_volatility">
                        <value name="IF0">
                          <block type="logic_compare">
                            <field name="OP">GT</field>
                            <value name="A">
                              <block type="math_arithmetic">
                                <field name="OP">ABS_DIFF</field>
                                <value name="A">
                                  <block type="variables_get">
                                    <field name="VAR" id="var_fast_ma">Fast MA</field>
                                  </block>
                                </value>
                                <value name="B">
                                  <block type="variables_get">
                                    <field name="VAR" id="var_slow_ma">Slow MA</field>
                                  </block>
                                </value>
                              </block>
                            </value>
                            <value name="B">
                              <block type="variables_get">
                                <field name="VAR" id="var_seuil_volatilite">Seuil_volatilité</field>
                              </block>
                            </value>
                          </block>
                        </value>
                        <statement name="DO0">
                          <!-- CONDITIONS D'ACHAT -->
                          <block type="controls_if" id="trade_conditions">
                            <mutation else="1"></mutation>
                            <value name="IF0">
                              <block type="logic_compare" id="fast_gt_slow">
                                <field name="OP">GT</field>
                                <value name="A">
                                  <block type="variables_get" id="get_fast_ma">
                                    <field name="VAR" id="var_fast_ma">Fast MA</field>
                                  </block>
                                </value>
                                <value name="B">
                                  <block type="variables_get" id="get_slow_ma">
                                    <field name="VAR" id="var_slow_ma">Slow MA</field>
                                  </block>
                                </value>
                              </block>
                            </value>
                            <statement name="DO0">
                              <block type="purchase" id="purchase_call">
                                <field name="PURCHASE_LIST">CALL</field>
                              </block>
                            </statement>
                            <value name="IF1">
                              <block type="logic_compare" id="fast_lt_slow">
                                <field name="OP">LT</field>
                                <value name="A">
                                  <block type="variables_get" id="get_fast_ma2">
                                    <field name="VAR" id="var_fast_ma">Fast MA</field>
                                  </block>
                                </value>
                                <value name="B">
                                  <block type="variables_get" id="get_slow_ma2">
                                    <field name="VAR" id="var_slow_ma">Slow MA</field>
                                  </block>
                                </value>
                              </block>
                            </value>
                            <statement name="DO1">
                              <block type="purchase" id="purchase_put">
                                <field name="PURCHASE_LIST">PUT</field>
                              </block>
                            </statement>
                          </block>
                        </statement>
                      </block>
                    </statement>
                    <statement name="ELSE">
                      <!-- Si PAUSE, décrémente PauseAprèsPerte -->
                      <block type="variables_set">
                        <field name="VAR" id="var_pauseafterloss">PauseAprèsPerte</field>
                        <value name="VALUE">
                          <block type="math_arithmetic">
                            <field name="OP">MINUS</field>
                            <value name="A">
                              <block type="variables_get">
                                <field name="VAR" id="var_pauseafterloss">PauseAprèsPerte</field>
                              </block>
                            </value>
                            <value name="B">
                              <block type="math_number">
                                <field name="NUM">1</field>
                              </block>
                            </value>
                          </block>
                        </value>
                      </block>
                    </statement>
                  </block>
                </next>
              </block>
            </next>
          </block>
        </statement>
      </block>
    </statement>
    <statement name="SELL_CONDITIONS">
      <block type="controls_if" id="sell_conditions">
        <mutation else="1"></mutation>
        <value name="IF0">
          <block type="logic_compare" id="profit_reached">
            <field name="OP">GTE</field>
            <value name="A">
              <block type="total_profit" id="get_total_profit"></block>
            </value>
            <value name="B">
              <block type="variables_get" id="get_takeprofit">
                <field name="VAR" id="var_takeprofit">Take Profit</field>
              </block>
            </value>
          </block>
        </value>
        <statement name="DO0">
          <block type="sell_at_market" id="sell_tp"></block>
        </statement>
        <value name="IF1">
          <block type="logic_compare" id="loss_reached">
            <field name="OP">LTE</field>
            <value name="A">
              <block type="total_profit" id="get_total_profit2"></block>
            </value>
            <value name="B">
              <block type="variables_get" id="get_stoploss">
                <field name="VAR" id="var_stoploss">Stop Loss</field>
              </block>
            </value>
          </block>
        </value>
        <statement name="DO1">
          <block type="sell_at_market" id="sell_sl"></block>
          <next>
            <block type="variables_set">
              <field name="VAR" id="var_pauseafterloss">PauseAprèsPerte</field>
              <value name="VALUE">
                <block type="math_number">
                  <field name="NUM">5</field>
                </block>
              </value>
            </block>
          </next>
        </statement>
      </block>
    </statement>
    <statement name="RESTART_BUY_CONDITIONS"/>
    <statement name="RESTART_LAST_TRADE_CONDITIONS"/>
  </block>
</xml>
